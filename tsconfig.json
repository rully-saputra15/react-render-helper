{
  "include": ["src"] /* Include only the src directory */,
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext", // Better for React and modern module systems
    "lib": ["es2017", "dom"], // Add DOM types
    "declaration": true,
    "declarationMap": true, // Helps with source mapping
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx", // Specific React JSX transform
    "moduleResolution": "node", // Improved module resolution
    "allowSyntheticDefaultImports": true // Helps with default imports
  }
}
